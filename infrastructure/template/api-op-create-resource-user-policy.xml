<policies>
    <inbound>
        <base />
        <set-backend-service base-url="https://www.hmcts.com/future-hearings/resources/update-resources-user" />
        <choose>
            <when condition="@(context.Request.Headers.GetValueOrDefault("_EnableMocks", "false")=="true")">
            <mock-response status-code="200" content-type="application/json" />
        </when>
    </choose>
    </inbound>
    <backend>
        <base />
    </backend>
    <outbound>
        <base />
    </outbound>
    <on-error>
        <base />
    </on-error>
</policies>