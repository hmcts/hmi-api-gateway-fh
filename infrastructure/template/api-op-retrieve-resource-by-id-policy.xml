<policies>
    <inbound>
        <base />
         <choose>
			<when condition="@(context.Request.Headers.GetValueOrDefault("Destination-System" == "S&L")">
				<rewrite-uri template="/retrieve-resources/{resourceId}" copy-unmatched-params="true" />
				<set-backend-service base-url="http://#{hostName}#/resources/" />
			</when>
		</choose>
    </inbound>
    <backend>
        <base />
    </backend>
    <outbound>
        <base />
    </outbound>
    <on-error>
        <base />
    </on-error>
</policies>