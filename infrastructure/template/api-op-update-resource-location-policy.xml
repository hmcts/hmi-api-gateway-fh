<policies>
    <inbound>
        <base/>
        <choose>
			<when condition="@(context.Request.Headers.GetValueOrDefault("Destination-System","") == "CFT")">
				<rewrite-uri template="/update-resource/{locationCaseHQId}" copy-unmatched-params="true" />
				<set-backend-service base-url="http://#{hostName}#/resources/" />
			</when>
		</choose>
    </inbound>
    <backend>
        <base/>
    </backend>
    <outbound>
        <base/>
    </outbound>
    <on-error>
        <base/>
    </on-error>
</policies>