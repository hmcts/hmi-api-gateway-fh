<policies>
    <inbound>
        <base />
        <cors>
            <allowed-origins>
                <origin>*</origin>
            </allowed-origins>
            <allowed-methods>
                <method>GET</method>
                <method>POST</method>
            </allowed-methods>
        </cors>
        <check-header name="Source" failed-check-httpcode="401" failed-check-error-message="Missing/Invalid Header Source" ignore-case="true">
            <value>SnL</value>
        </check-header>
        <check-header name="Destination" failed-check-httpcode="401" failed-check-error-message="Missing/Invalid Header Destination" ignore-case="true">
            <value>CFT</value>
        </check-header>
        <check-header name="DateTime" failed-check-httpcode="401" failed-check-error-message="Missing/Invalid Header DateTime" ignore-case="true">
        </check-header>
        <check-header name="RequestType" failed-check-httpcode="401" failed-check-error-message="Missing/Invalid Header RequestType" ignore-case="true">
            <value>TypeOfCase</value>
        </check-header>
        <mock-response status-code="200" content-type="application/json" />
    </inbound>
    <backend>
        <base />
    </backend>
    <outbound>
        <base />
    </outbound>
    <on-error>
        <base />
    </on-error>
</policies>