<policies>
    <inbound>
        <base />
        <cors>
            <allowed-origins>
                <origin>*</origin>
            </allowed-origins>
            <allowed-methods>
                <method>GET</method>
                <method>POST</method>
            </allowed-methods>
        </cors>
        <check-header name="Company-Name" failed-check-httpcode="401" failed-check-error-message="Missing/Invalid Header Company Name" ignore-case="true">
            <value>HMCTS</value>
        </check-header>
        <mock-response status-code="200" content-type="application/json" />
        <set-backend-service base-url="https://www.hmcts.com/request-hearings/request-listings" />
    </inbound>
    <backend>
        <base />
    </backend>
    <outbound>
        <base />
    </outbound>
    <on-error>
        <base />
    </on-error>
</policies>