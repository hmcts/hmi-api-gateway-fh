{
   "$schema":"http://json-schema.org/draft-07/schema#",
   "$id":"http://www.gov.uk/hmcts.schema.json",
   "title":"Product",
   "description":"HMI integration messages",
   "definitions":{
      "meta":{
         "type":"object",
         "properties":{
            "transactionIdCaseHQ":{
                "type":"string",
                "maxLength":40
             },
            "timestamp":{
               "type":"string",
               "format":"date-time"
            }
         },
         "required":[
            "transactionIdCaseHQ",
            "transactionIdHMCTS",
            "timestamp"
         ]
      }
   },
   "oneOf":[
      {
         "type":"object",
         "properties":{
            "hearingResponse":{
               "type":"object",
               "properties":{
                  "meta":{
                     "$ref":"#/definitions/meta"
                  },
                  "hearing":{
                     "type":"object",
                     "properties":{
                        "listingRequestId":{
                           "type":"string",
                           "maxLength":10
                        },
                        "hearingIdCaseHQ":{
                           "type":"string"
                        },
                        "hearingType":{
                           "type":"string"
                        },
                        "hearingStartTime":{
                           "type":"string",
                           "format":"date-time"
                        },
                        "hearingEndTime":{
                           "type":"string",
                           "format":"date-time"
                        },
                        "hearingCaseIdHMCTS":{
                          "type":"string",
                           "maxLength":30
                        },
                        "hearingTranslatorRequired":{
                           "type":"boolean"
                        },
                        "hearingTranslatorLanguage":{
                           "type":"string"
                        },
                        "hearingCreatedDate":{
                           "type":"string",
                           "format":"date-time"
                        },
                        "hearingCreatedBy":{
                           "type":"string"
                        },
                        "hearingVenueId":{
                           "type":"string"
                        },
                        "hearingRoomId":{
                           "type":"string"
                        },
                        "hearingJudgeId":{
                           "type":"string"
                        }
                     },
                     "required":[
                        "listingRequestId",
                        "hearingIdCaseHQ",
                        "hearingType",
                        "hearingStartTime",
                        "hearingEndTime",
                        "hearingCaseIdHMCTS",
                        "hearingCreatedDate",
                        "hearingCreatedBy",
                        "hearingVenueId",
                        "hearingRoomId"
                     ]
                  },
                  "err":{
                     "type":"object",
                     "properties":{
                        "errCode":{
                           "type":"integer"
                        },
                        "errDesc":{
                           "type":"string"
                        },
                        "errLinkId":{
                           "type":"string",
                           "minLength":1
                        }
                     },
                     "required":[
                        "errCode",
                        "errDesc",
                        "errLinkId"
                     ]
                  }
               },
               "required":[
                  "meta",
                  "hearing"
               ]
            }
         },
         "required":[
            "hearingResponse"
         ]
      }
   ]
}